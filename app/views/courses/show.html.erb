<br>
<div class="booyah-box course-box col-xs-12 col-lg-10 col-lg-offset-1">

  <h1 class="text-center"><%= @course.title %></h1>
  <br>
  <%= image_tag @course.image, class: 'img-responsive' %>

  <!-- <%# if flash[:alert] %>
    <div class="alert alert-danger"><%#= flash[:alert] %></div>
  <%# end %>-->

  <div class="col-xs-12 col-sm-4 text-center">
    <h3>
      <span class="label label-default">
        <% if @course.premium? %>
          <%= number_to_currency @course.cost %>
        <% else %>
          FREE!
        <% end %>
      </span>
    </h3>

  <% if current_user && current_user == @course.user %>
    <br>
    <br>
    <%= link_to "Administer", instructor_course_path(@course), class: 'btn btn-danger btn-lg' %>
  <% end %>
  <br>
  <br>
  <% if current_user && current_user.enrolled_in?(@course) %>
    <h2><span class="label label-default">
      You Are Enrolled!
    </span></h2>
  <% else %>
    <% if @course.free? %>
      <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-lg btn-success', method: :post %>
      <% else %>
      <!-- stripe payment -->
        <%= form_tag course_enrollments_path(@course) do %>
          <article>
            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                  data-amount="<%= (@course.cost * 100).to_i %>"
                  data-locale="auto"></script>
        <% end %>
      <% end %>
      <!-- stripe payment -->
  <% end %>
  </div>
  <br>

  <div class="col-xs-12 col-sm-8">
    <h3><%= @course.description %></h3>
  </div>

  <div class="col-xs-12">
    <% @course.sections.each do |section| %>
    <br>
    <br>
      <div class="section">
        <h3><%= section.title %></h3>
          <% section.lessons.each do |lesson| %>
            <%= link_to lesson_path(lesson) do %>
              <div class="col-xs-12 col-sm-6">
                <div class="lesson text-center">
                <br>
                  <b><%= lesson.title %></b>
                    <br>
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
          <br class="clear">
      </div>
    <% end %>
  </div>
  <hr>

</div>