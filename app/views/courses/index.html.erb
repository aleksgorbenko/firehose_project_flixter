<br>

<div class="booyah-box col-xs-10 col-xs-offset-1 col-lg-6 col-lg-offset-3">
  <h1 class="text-center">Learn Something Today</h1>
  <hr>

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br>
    <div class="col-xs-10 col-xs-offset-1">
      <%= image_tag course.image, class: 'img-responsive' %>
    </div>

    <div class="col-sm-8 col-xs-12">
      <%= course.description %>
    </div>
    <div class="col-sm-4 col-xs-12 text-center">
      <%= link_to "More Details...", course_path(course), class: 'btn btn-success btn-large' %>
    </div>
    <br class="clear">
    <br class="clear">
    <hr>
  <% end %>

</div>