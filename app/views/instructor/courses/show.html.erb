<br>
<div class="booyah-box course-box col-xs-12 col-lg-10 col-lg-offset-1">

  <h1 class="text-center"><%= @course.title %></h1>
<br>
  <div class="text-cen"><%= link_to "Add a New Section", new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br class="clear">

  <div><%= link_to "Preview Course", courses_path(@course), class: 'btn btn-warning pull-right' %>
  </div>
  <br>

  <p><%= @course.description %></p>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to "New Lesson", new_instructor_section_lesson_path(section), class: 'btn, btn-primary pull-right btn-xs' %>

        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%=lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>

      <br class="clear">
      </li>
    <% end %>
  </ul>

</div>